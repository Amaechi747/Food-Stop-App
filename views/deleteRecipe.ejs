<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
  <title>FOOD-STOP By Moses |<%= title %></title>
<body>
  <%- include('./partials/navbar.ejs') %>
  <div class="container-fluid">
      <div class="col text-center py-3">
        <h1>Delete Page</h1>
      </div>
      <div class="row g-6">
        <div class="col-6 offset-3 border-secondary shadow py-3 px-5 rounded">
          <form class="form_container" method="post" action="/recipes/delete/<%=id%>?_method=DELETE" enctype="application/x-www-form-urlencoded">

            <div class="card text-center">
                <div class="card-header">
                  Administrative Panel
                </div>
                <div class="card-body">
                  <h5 class="card-title">Delete this Recipe</h5>
                  <p class="card-text">Deleted recipe records may not be recovered.</p>
                  <div class="form-group mb-3">
                    <div class="text-center">
                      <input type="submit" class="btn btn-primary" id="submit" value="Delete" >
                    </div>
                  </div>
                </div>
                <div class="card-footer text-muted">
                  Administrator: <%=user%>
                </div>
              </div>
          </form>
        </div>
      </div>
  </div>
    

 



  <%- include('./partials/footer.ejs') %>
</body>
</html>

